    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/NavigationBar</item>
        <item name="colorPrimary">@color/HeadingBar</item>
        <item name="android:windowBackground">@color/TabBar</item>
        <item name="android:textColorPrimary">@color/HeadText</item>
        <!--item name="android:colorBackground">@color/TabBar</item-->
    </style>

    <style name="HeadStyle">
        <item name="android:background">@color/HeadingBar</item>
    </style>

    <style name="TabTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/TabSelIndicator</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/TabTextSelIndicator</item>
        <!--item name="tabBackground">@color/TabBar</item-->
        <!--item name="background">@color/TabBar</item-->
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/TabText</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FragmentStyle">
      <item name="android:background">@color/FragmentBackground</item>
    </style>


    <style name="CalcResultText">
        <item name="android:textColor">@color/CalcText</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CalcResultText.value">
        <item name="android:textColor">@color/CalcTextResult</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="CalcResultText.value.small">
        <item name="android:textColor">@color/CalcTextResult</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CalcResultText.Info">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">italic</item>
    </style>s


    <style name="FishSpinnerItemText">
        <item name="android:background">@color/FishSpinner_background</item>
        <item name="android:textColor">@color/FishSpinnerItem</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="FishSpinnerDropText">
        <item name="android:background">@color/FishSpinner_background</item>
        <item name="android:textColor">@color/FishSpinnerDrop</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CalcInputText">
        <item name="android:textColor">@color/CalcInputText</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CalcInputText.Edit">
        <item name="android:background">@color/CalcInputEdit_background</item>
        <item name="android:textColor">@color/CalcInputEditText</item>
        <item name="android:editTextColor">@color/CalcInputHighlight</item>
    </style>s

    <style name="CalcButtonText">
        <item name="android:background">@color/CalcButton_background</item>
        <item name="android:textColor">@color/CalcButton</item>
        <item name="android:textSize">30dp</item>s
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:radius">10dp</item>

        <item name="android:shadowColor">@color/CalcButton_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius" >2</item>
    </style>


